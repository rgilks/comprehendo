{
  "name": "comprehendo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "scripts": {
    "dev": "clear && next dev --turbopack",
    "build": "next build",
    "build:cf": "opennext build",
    "start": "next start",
    "deploy": "npm run build:cf && wrangler deploy",
    "deploy:preview": "npm run build:cf && wrangler deploy --env preview",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "clear && npm run verify && npm run test:run && npx playwright test --reporter=list",
    "nuke": "rm -rf node_modules package-lock.json .next && npm install",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "check-github-action": "sleep 180 && curl -s \"https://api.github.com/repos/rgilks/comprehendo/actions/runs?per_page=1\" | jq '.workflow_runs[0].conclusion'",
    "test:e2e": "npx playwright test --reporter=list",
    "test:e2e:watch": "playwright test --watch",
    "cleanup-db": "node scripts/cleanup-db.js",
    "cleanup-db:dry-run": "node scripts/cleanup-db.js --dry-run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.25.0",
    "@heroicons/react": "^2.2.0",
    "@opennextjs/cloudflare": "^1.11.0",
    "@serwist/next": "^9.2.1",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "i18next": "^25.6.0",
    "i18next-resources-to-backend": "^1.2.1",
    "immer": "^10.1.3",
    "motion": "^12.23.24",
    "next": "15.5.6",
    "next-auth": "^4.24.11",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "^16.1.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-immer": "^0.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-check-updates": "^19.1.1",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  }
}
