{
  "name": "comprehendo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "scripts": {
    "dev": "clear && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "clear && npm run verify && npx playwright test --reporter=list",
    "nuke": "rm -rf node_modules package-lock.json .next && npm install",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "test:e2e": "npx playwright test --reporter=list",
    "test:e2e:watch": "playwright test --watch",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "@serwist/next": "^9.0.14",
    "better-sqlite3": "^11.10.0",
    "i18next": "^25.2.1",
    "i18next-resources-to-backend": "^1.2.1",
    "immer": "^10.1.1",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.5.2",
    "zod": "^3.25.32",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.23",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-immer": "^0.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-check-updates": "^18.0.1",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  }
}
